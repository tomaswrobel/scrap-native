{
	"$schema": "https://schema.tauri.app/config/2.0.0",
	"productName": "scrap-native",
	"version": "0.1.0",
	"identifier": "dev.tomaswrobel.scrap",
	"build": {
		"beforeBuildCommand": "yarn parcel build index.html --no-source-maps",
		"beforeDevCommand": "yarn parcel index.html",
		"devUrl": "http://localhost:1234",
		"frontendDist": "../dist"
	},
	"app": {
		"withGlobalTauri": false,
		"windows": [
			{
				"title": "Scrap Native",
				"maximized": true,
				"decorations": true
			}
		],
		"security": {
			"csp": null,
			"capabilities": [
				"main"
			]
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png"
		],
		
		"linux": {
			"deb": {
				"files": {}
			},
			"rpm": {
				"epoch": 0,
				"files": {},
				"release": "1"
			}
		}
	}
}