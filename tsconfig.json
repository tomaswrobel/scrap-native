{
    "compilerOptions": {
        "target": "ES2017",
        "lib": [
            "ES2017",
            "DOM",
            "DOM.Iterable"
        ],
        "experimentalDecorators": true,
        "useDefineForClassFields": true,

        // Bundler mode
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "module": "Preserve",
        "allowJs": true,
        "noEmit": true,
    
        // Linting
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

		// Parcel resolution
		"paths": {
			"@scrap/*": ["./src/*"]
		}
    },
    "include": [
        "src",
        "pwa"
    ],
    "exclude": [
        "src/monaco-editor/lib",
        "src/code/lib"
    ],
    "references": [
        {"path": "./src/monaco-editor/lib/tsconfig.json"},
        {"path": "./src/code/lib/tsconfig.json"}
    ]
}